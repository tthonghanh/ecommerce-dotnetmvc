@model ProjectDemo.ViewModel.ProductCategoryViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Product" asp-action="Index" method="get">
    <p>
        <select asp-for="CategoryId" asp-items="Model.CategoryList">
            <option value="">All</option>
        </select>
        Search: <input type="text" asp-for="ProductSearchName" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductList![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductList![0].CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductList![0].OriginalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductList![0].ActualPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductList![0].CreateAt)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductList!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
